<UserControl
    x:Class="Reversi.Control.ReversiBoardUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">


    <Viewbox>

        <Canvas x:Name="Boardcanvas" Height="300" Width="300" HorizontalAlignment="Center"
                VerticalAlignment="Center" Tapped="Boardcanvas_Tapped">
            <Canvas.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/Grass Pattern set 01.jpg" Stretch="UniformToFill">
                    <ImageBrush.RelativeTransform>
                        <CompositeTransform CenterY="0.5" CenterX="0.5" ScaleX="0.6"/>
                    </ImageBrush.RelativeTransform>
                </ImageBrush>
            </Canvas.Background>

            <Grid Height="300" Width="300" />
        </Canvas>
    </Viewbox>
</UserControl>